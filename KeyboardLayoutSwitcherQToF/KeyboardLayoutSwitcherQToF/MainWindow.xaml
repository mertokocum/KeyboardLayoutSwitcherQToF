<Window x:Class="KeyboardLayoutSwitcherQToF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Klavye Düzeni Değiştirici" Height="200" Width="300"
        WindowStartupLocation="CenterScreen">
    <StackPanel RenderTransformOrigin="0.5,0.5" VerticalAlignment="Center" HorizontalAlignment="Center">
        <StackPanel.RenderTransform>
            <ScaleTransform ScaleX="1.5" ScaleY="1.5"/>
        </StackPanel.RenderTransform>
        <TextBlock Text="Klavye Düzeni Seçin:" FontWeight="Bold" Margin="0,0,0,10"/>
        <RadioButton x:Name="RadioButton_Q" Content="Turkish Q" Checked="RadioButton_Q_Checked" GroupName="LayoutGroup" Margin="0,0,0,5"/>
        <RadioButton x:Name="RadioButton_F" Content="Turkish F" Checked="RadioButton_F_Checked" GroupName="LayoutGroup"/>
    </StackPanel>
</Window>
